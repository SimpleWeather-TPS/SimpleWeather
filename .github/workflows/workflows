name: Deploy to GitHub Pages

# trigger: quando fai push su main
on:
  push:
    branches: [ main ]

# permessi necessari per le GitHub Pages actions
permissions:
  contents: read
  pages: write
  id-token: write

jobs:
  build:
    runs-on: ubuntu-latest
    permissions:
      contents: read
      pages: write
      id-token: write
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Create config.js from secret
        # genera un file config.js che contiene la chiave
        run: |
          echo "export const API_KEY = '${{ secrets.MY_API_KEY }}';" > config.js

      - name: (Optional) Build site
        # Se non hai tool di build, puoi rimuovere o lasciare questo step.
        run: |
          echo "No build step needed for plain static site"
        # run: npm ci; npm run build   # decommenta se hai un build step

      - name: Upload artifact for GitHub Pages
        uses: actions/upload-pages-artifact@v3
        with:
          path: .

  deploy:
    needs: build
    runs-on: ubuntu-latest
    permissions:
      pages: write
      id-token: write
    steps:
      - name: Deploy to GitHub Pages
        uses: actions/deploy-pages@v4
